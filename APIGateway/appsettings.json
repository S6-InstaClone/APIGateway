{
  "ReverseProxy": {
    "Routes": {
      "profile-route": {
        "ClusterId": "account-cluster",
        "Match": {
          "Path": "api/Profile/{**catch-all}"
        }
      },
      "post-route": {
        "ClusterId": "post-cluster",
        "Match": {
          "Path": "api/Post/{**catch-all}"
        }
      }
    },
    "Clusters": {
      "account-cluster": {
        "Destinations": {
          "account-api": {
            "Address": "http://localhost:5043/"
          }
        }
      },
      "post-cluster": {
        "Destinations": {
          "post-api": {
            "Address": "http://localhost:5002/"
          }
        }
      }
    }
  }
}